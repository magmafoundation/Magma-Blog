<div id="content" class="site-content">
        <div class="single-page-header post-box" style="background-image: url({{thumbnail}});">
            <div class="single-bg-overlay"></div>
            <div class="sing-page-header-content">
                <div class="container">
                    <div class="row">   
                        <div class="col-md-12">
                            <div class="post-cat">
                                <span class="posted-in"> 
                                     {% for tag in tags %}
                                        {% if tag != 'post' %}
                                            <a href="#">{{ tag }}</a>
                                        {% endif %}
                                    {% endfor %}
                                </span>
                            </div>
                            <div class="entry-header">                  
                                <h1 class="entry-title">{{ title }}</h1>                              
                                    <div class="entry-meta">
                                        <span class="byline"><a class="url fn n" href="#"><i class="flaticon-user"></i> {{ author }}</a></span>
                                        <span class="posted-on">
                                            <a href="#"><i class="flaticon-clock"></i><time class="entry-date">{{ date | readableDate }}</time></a>
                                        </span>                     
                                    </div><!-- .entry-meta -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

