---
title: Blog
layout: 'base.njk'
---

<div id="content" class="site-content">
  <div
      class="page-header dtable text-center"
      style="background-image: url(./assets/images/bg-page-header.jpg)"
    >
    <div class="dcell">
      <div class="container">
        <h1 class="page-title">Blog</h1>
        <ul id="breadcrumbs" class="breadcrumbs">
          <li>
            <a href="#">Home</a>
          </li>
          <li class="active">Blog</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="entry-content">
    <div class="container">
      <div class="row">
        <div class="content-area col-lg-9 col-md-9 col-sm-12 col-xs-12">
          <div class="blog-list">
            {% for post in collections.post | reverse %}
              <article class="post-box">
                <div class="post-inner">
                  <div class="entry-media">
                    <div class="post-cat">
                      <span class="posted-in">
                        {% for tag in post.data.tags %}
                          {% if tag != 'post' %}
                            <a href="#" rel="category tag">{{ tag }}</a>
                          {% endif %}
                        {% endfor %}
                      </span>
                    </div>
                    <a href="{{ post.url }}">
                      <img
                        src="{{ post.data.thumbnail }}"
                        alt="{{ post.data.thumbnailAlt }}"
/>
                    </a>
                  </div>
                  <div class="inner-post">
                    <div class="entry-header">
                      <div class="entry-meta">
                        <span class="byline"
                          >
                          <a class="url fn n" href="#"
                            >
                            <i class="flaticon-user"></i>
                            {{ post.data.author }}</a
                          >
                        </span
                        >
                        <span class="posted-on">
                          <a href="#"
                            >
                            <i class="flaticon-clock"></i>
                            <time class="entry-date published"
                              >{{ post.date | readableDate }}</time
                            >
                          </a
                          >
                        </span>
                      </div>
                      <!-- .entry-meta -->

                      <h3 class="entry-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                      </h3>
                    </div>
                    <!-- .entry-header -->

                    <div class="entry-summary the-excerpt">
                      <p>
                        {{ post.data.description }}
                      </p>
                    </div>
                    <!-- .entry-content -->
                  </div>
                </div>
              </article>
            {% endfor %}
          </div>
          <ul class="page-pagination">
            <li>
              <span aria-current="page" class="page-numbers current">1</span>
            </li>
            <li>
              <a class="next page-numbers" href="#"
                  >
                <i class="flaticon-arrow-pointing-to-right"></i
                >
              </a>
            </li>
          </ul>
        </div>

        {% include 'sidebar.njk' %}

      </div>
    </div>
  </div>
</div>